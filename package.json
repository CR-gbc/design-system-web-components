{
  "name": "@bcgov/web-components",
  "version": "1.1.0",
  "description": "BCGov Web Components using Stencil JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/design-system-web-components"
  },
  "main": "html/dist/index.js",
  "module": "html/dist/index.mjs",
  "es2015": "html/dist/esm/index.mjs",
  "es2017": "html/dist/esm/index.mjs",
  "types": "html/dist/types/index.d.ts",
  "collection": "html/dist/collection/collection-manifest.json",
  "collection:main": "html/dist/collection/index.js",
  "unpkg": "html/dist/bcgov-web-components/bcgov-web-components.js",
  "files": [
    "html/dist",
    "src/components",
    "src/styles"
  ],
  "scripts": {
    "build": "stencil build --prod --docs-readme && webpack  --progress --config webpack.js  --colors ",
    "build:production": "stencil build --prod --docs-readme && webpack  --progress --config webpack.js  --colors ",
    "start": "webpack-dev-server --env.development --watch --open --config webpack.js  --colors",
    "deploy": "gh-pages -d html",
    "build.sjs": "stencil build --prod",
    "start.sjs": "stencil build --dev  --watch --serve",
    "test": "stencil test --spec",
    "docs": "stencil build --docs-readme",
    "test.e2e": "stencil test --e2e",
    "test.screen": "stencil test --e2e --screenshot",
    "generate": "stencil generate",
    "browser-list": "npx browserslist"
  },
  "browserslist": [
    "> 1.5%",
    "ie >= 11",
    "edge >= 17"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "debug": false,
          "corejs": "3.0.0",
          "targets": {
            "esmodules": true,
            "ie": "11"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@stencil/core": "1.3.3",
    "@stencil/sass": "^1.3.2",
    "@types/jest": "24.0.18",
    "@types/node": "^12.12.48",
    "@types/puppeteer": "1.19.1",
    "@types/webpack": "^4.41.20",
    "@types/webpack-dev-server": "^3.11.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.6.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "file-loader": "^4.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.3.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "markdown-loader": "^5.1.0",
    "mini-css-extract-plugin": "^0.8.2",
    "node-sass": "^4.14.1",
    "parse-md": "^2.0.4",
    "puppeteer": "1.19.0",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.1",
    "showdown-highlight": "^2.1.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-solid-svg-icons": "^5.13.1",
    "core-js": "^3.6.5",
    "gh-pages": "^2.2.0"
  }
}
