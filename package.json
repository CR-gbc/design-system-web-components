{
  "name": "@bcgov/web-components",
  "version": "0.0.1",
  "description": "BCGov Web Components using Stencil JS",
  "main": "html/dist/index.js",
  "module": "html/dist/index.mjs",
  "es2015": "html/dist/esm/index.mjs",
  "es2017": "html/dist/esm/index.mjs",
  "types": "html/dist/types/index.d.ts",
  "collection": "html/dist/collection/collection-manifest.json",
  "collection:main": "html/dist/collection/index.js",
  "unpkg": "html/dist/bcgov-web-components/bcgov-web-components.js",
  "files": [
    "html/dist",
    "src/components/sass"
  ],
  "scripts": {
    "build": "stencil build --prod  --docs-readme && NODE_ENV=production webpack --config webpack/webpack.config.prod.js  --colors ",
    "build.sjs": "stencil build --prod",
    "start": "webpack-dev-server --watch  --open  --config webpack/webpack.config.dev.js ",
    "start.sjs": "stencil build --dev  --watch --serve ",
    "test": "stencil test --spec",
    "docs": "stencil build --docs-readme",
    "test.e2e": "stencil test --e2e",
    "test.screen": "stencil test --e2e --screenshot",
    "generate": "stencil generate"
  },
  "browserslist": [
    "> 1.5%",
    "ie >= 11",
    "edge >= 17"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "debug": false,
          "corejs": "3.0.0",
          "targets": {
            "esmodules": true,
            "ie": "11"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6",
    "@babel/core": "^7.6",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "@stencil/core": "^1.7",
    "@stencil/sass": "^1.1",
    "@types/jest": "24.0.22",
    "@types/node": "^12.12.3",
    "@types/puppeteer": "1.20.1",
    "@types/webpack": "^4.39.7",
    "@types/webpack-dev-server": "^3.4.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "markdown-loader": "^5.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "parse-md": "^2.0.2",
    "puppeteer": "1.20.0",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.0",
    "showdown-highlight": "^2.1.3",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "core-js": "^3.3.5",
    "markdown-yaml-meta": "0.0.1",
    "parse-markdown-metadata": "^1.0.8"
  }
}
