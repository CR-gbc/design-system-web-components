{
  "name": "@bcgov/web-components",
  "version": "1.2.0",
  "description": "BCGov Design System Web Components using Stencil JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/design-system-web-components"
  },
  "main": "html/dist/index.js",
  "module": "html/dist/index.mjs",
  "es2015": "html/dist/esm/index.mjs",
  "es2017": "html/dist/esm/index.mjs",
  "types": "html/dist/types/index.d.ts",
  "collection": "html/dist/collection/collection-manifest.json",
  "collection:main": "html/dist/collection/index.js",
  "unpkg": "html/dist/bcgov-web-components/bcgov-web-components.js",
  "files": [
    "html/dist",
    "src/components",
    "src/styles"
  ],
  "scripts": {
    "build": "stencil build --prod --docs-readme && webpack  --progress --config webpack.js  --colors ",
    "build:production": "stencil build --prod --docs-readme && webpack  --progress --config webpack.js  --colors ",
    "start": "webpack-dev-server --env.development --watch --open --config webpack.js  --colors",
    "deploy": "gh-pages -d html",
    "build.sjs": "stencil build --prod",
    "start.sjs": "stencil build --dev  --watch --serve",
    "test": "stencil test --spec",
    "docs": "stencil build --docs-readme",
    "test.e2e": "stencil test --e2e",
    "test.screen": "stencil test --e2e --screenshot",
    "generate": "stencil generate",
    "browser-list": "npx browserslist"
  },
  "browserslist": [
    "> 1.5%",
    "ie >= 11",
    "edge >= 17"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@stencil/core": "^1.17.4",
    "@stencil/sass": "^1.4.1",
    "@types/jest": "25.2.3",
    "@types/webpack-dev-server": "^3.11.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.1.2",
    "css-loader": "^3.6.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "file-loader": "^4.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.5.1",
    "jest": "26.0.1",
    "jest-cli": "26.0.1",
    "markdown-loader": "^5.1.0",
    "mini-css-extract-plugin": "^0.8.2",
    "node-sass": "^4.14",
    "parse-md": "^2.0.4",
    "sass-loader": "^7.1",
    "showdown": "^1.9.1",
    "showdown-highlight": "^2.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2",
    "ts-node": "^8.10",
    "typescript": "^3.9",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^4.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "core-js": "^3.8.3",
    "css-vars-ponyfill": "^2.4.3",
    "gh-pages": "^2.2",
    "webpack": "^4.46.0"
  }
}
