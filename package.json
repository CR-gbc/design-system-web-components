{
  "name": "@bcgov/web-components",
  "version": "0.0.1",
  "description": "BCGov Web Components using Stencil JS",
  "main": "build/dist/index.js",
  "module": "build/dist/index.mjs",
  "es2015": "build/dist/esm/index.mjs",
  "es2017": "build/dist/esm/index.mjs",
  "types": "build/dist/types/index.d.ts",
  "collection": "build/dist/collection/collection-manifest.json",
  "collection:main": "build/dist/collection/index.js",
  "unpkg": "build/dist/bcgov-web-components/bcgov-web-components.js",
  "files": [
    "build/dist",
    "src/components/sass"
  ],
  "scripts": {
    "build": "stencil build --prod  --docs-readme && NODE_ENV=production webpack --config webpack/webpack.config.prod.js  --colors ",
    "start": "webpack-dev-server  --watch  --open  --config webpack/webpack.config.dev.js ",
    "start.sjs": "stencil build --dev  --watch --serve ",
    "test": "stencil test --spec",
    "docs": "stencil build --docs-readme",
    "test.e2e": "stencil test --e2e",
    "generate": "stencil generate"
  },
  "browserslist": [
    "> 1.5%",
    "ie >= 11",
    "edge >= 17"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3.0.0",
          "targets": {
            "esmodules": true,
            "ie": "11"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@stencil/core": "^1.3.3",
    "@stencil/sass": "^1.0.1",
    "@types/jest": "24.0.18",
    "@types/node": "^12.7.12",
    "@types/puppeteer": "1.20.1",
    "@types/webpack": "^4.39.3",
    "@types/webpack-dev-server": "^3.1.7",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "markdown-loader": "^5.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "puppeteer": "1.20.0",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.0",
    "showdown-highlight": "^2.1.3",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.2.1",
    "webpack-shell-plugin": "^0.5.0",
    "theo": "^8.1.4"
  },
  "license": "MIT",
  "dependencies": {}
}
